<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="edit_text" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:background">@drawable/sh_edit_text</item>
        <item name="fontFamily">@font/rubik</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/dark_black</item>
        <item name="android:textColorHint">@color/dark_gray</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="input_label" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="primary_btn" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/sh_primary_btn</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">@font/rubik</item>
    </style>

    <style name="setting_title" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="layout_constraintVertical_chainStyle">packed</item>
    </style>

    <style name="setting_description" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/rubik</item>
        <item name="layout_constraintVertical_chainStyle">packed</item>
    </style>

    <style name="block">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:background">@drawable/sh_settings_block</item>
        <item name="android:paddingHorizontal">15dp</item>
        <item name="android:paddingVertical">5dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="block_title" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/rubik</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_black</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SeekBarColor" parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@color/white</item>
        <item name="android:progressDrawable">@drawable/line_progress</item>
    </style>
</resources>