<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="2dp"
    android:layout_marginBottom="5dp"
    >

    <ImageView
        android:id="@+id/iv_song"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@string/song"
        android:paddingVertical="3dp"
        android:src="@drawable/song_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_song_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_song"
        app:layout_constraintTop_toTopOf="@id/iv_song"
        android:text="Акид"
        android:fontFamily="@font/rubik"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/tv_song_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/iv_song"
        app:layout_constraintTop_toBottomOf="@id/tv_song_title"
        app:layout_constraintBottom_toBottomOf="@id/iv_song"
        android:layout_marginBottom="12dp"
        android:text="Mnogoznal"
        android:fontFamily="@font/rubik"
        android:textStyle="bold"
        android:textColor="@color/text_gray"
        />

    <TextView
        android:id="@+id/tv_song_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/rubik"
        android:text="3:07"
        android:layout_marginEnd="5dp"
        android:textColor="@color/text_gray"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_song"
        app:layout_constraintEnd_toStartOf="@id/btn_remove_song"
        app:layout_constraintTop_toTopOf="@id/iv_song"
        app:layout_constraintVertical_bias="1"/>

    <ImageView
        android:id="@+id/btn_remove_song"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/ic_remove"
        app:layout_constraintBottom_toBottomOf="@id/iv_song"
        app:layout_constraintEnd_toStartOf="@id/btn_add_favorite"
        app:layout_constraintTop_toTopOf="@id/iv_song"
        app:layout_constraintVertical_bias="0.6" />
    <ImageView
        android:id="@+id/btn_add_favorite"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/outlined_star"
        app:layout_constraintBottom_toBottomOf="@id/iv_song"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_song"
        app:layout_constraintVertical_bias="0.6" />


</androidx.constraintlayout.widget.ConstraintLayout>