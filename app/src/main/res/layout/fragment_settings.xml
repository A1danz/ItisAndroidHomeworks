<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        style="@style/block"
        android:id="@+id/importance_block"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/sh_settings_block"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        android:orientation="vertical"
        >
        <androidx.appcompat.widget.AppCompatTextView
            style="@style/block_title"
            android:text="@string/block_importance_title"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/setting_title"
                android:id="@+id/tv_medium_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_medium_desc"
                android:text="@string/importance_medium_title"
                />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/setting_description"
                android:id="@+id/tv_medium_desc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_medium_title"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/importance_medium_description"
                />
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_importance_medium"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                style="@style/setting_title"
                android:id="@+id/tv_high_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/importance_high_title"
                app:layout_constraintBottom_toTopOf="@id/tv_high_description"
                />
            <TextView
                android:id="@+id/tv_high_description"
                style="@style/setting_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/importance_high_description"
                app:layout_constraintTop_toBottomOf="@id/tv_high_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_importance_high"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/setting_title"
                android:id="@+id/tv_urgent_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/importance_urgent_title"
                app:layout_constraintBottom_toTopOf="@id/tv_urgent_description"
                />
            <TextView
                android:id="@+id/tv_urgent_description"
                style="@style/setting_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/importance_urgent_description"
                app:layout_constraintTop_toBottomOf="@id/tv_urgent_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_importance_urgent"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/privacy_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/importance_block"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/sh_settings_block"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/block_title"
            android:text="@string/block_privacy_title"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/setting_title"
                android:id="@+id/tv_privacy_public_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_privacy_public_desc"
                android:text="@string/privacy_public_title"
                />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/setting_description"
                android:id="@+id/tv_privacy_public_desc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_privacy_public_title"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/privacy_public_description"
                />
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_privacy_public"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/setting_title"
                android:id="@+id/tv_privacy_private_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_privacy_private_desc"
                android:text="@string/privacy_private_title"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_privacy_private_desc"
                style="@style/setting_description"
                android:text="@string/privacy_private_importance"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/switch_privacy_private"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_privacy_private_title" />
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_privacy_private"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/setting_title"
                android:id="@+id/tv_privacy_secret_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_privacy_secret_desc"
                android:text="@string/privacy_secret_title"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_privacy_secret_desc"
                style="@style/setting_description"
                android:text="@string/privacy_secret_description"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/switch_privacy_secret"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toBottomOf="@id/tv_privacy_secret_title" />
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_privacy_secret"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/features_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/privacy_block"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/sh_settings_block"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.AppCompatTextView
            style="@style/block_title"
            android:text="@string/features_block_title"
            />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/setting_title"
                android:id="@+id/tv_feature_text_size_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_feature_text_size_desc"
                android:text="@string/feature_text_size_title"
                />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/setting_description"
                android:id="@+id/tv_feature_text_size_desc"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_feature_text_size_title"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/feature_text_size_description"
                />
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_feature_text_size"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/setting_title"
                android:id="@+id/tv_feature_btn_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_feature_btn_desc"
                android:text="@string/feature_btn_title"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_feature_btn_desc"
                style="@style/setting_description"
                android:text="@string/feature_btn_description"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/switch_feature_btn"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_feature_btn_title" />
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_feature_btn"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>