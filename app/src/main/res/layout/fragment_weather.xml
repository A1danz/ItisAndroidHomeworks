<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_get_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cv_weather_info"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="15dp"
        app:cardCornerRadius="5dp"
        app:contentPaddingBottom="40dp"
        app:contentPaddingTop="35dp"
        app:contentPaddingRight="10dp"
        app:contentPaddingLeft="10dp"
        app:cardElevation="10dp"

        app:layout_constraintVertical_chainStyle="packed"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

                android:id="@+id/inputLayout_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:hint="@string/city"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/input_weather"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_get_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/get"
                app:cornerRadius="5dp"
                android:layout_marginTop="5dp"
                android:paddingVertical="15dp"
                >
            </com.google.android.material.button.MaterialButton>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/cv_get_weather"
        app:layout_constraintBottom_toBottomOf="@id/cv_get_weather"
        app:layout_constraintStart_toStartOf="@id/cv_get_weather"
        app:layout_constraintEnd_toEndOf="@id/cv_get_weather"
        android:elevation="11dp"
        android:background="@color/alpha_black"
        android:padding="40dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_weather_info"

        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cv_get_weather"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            >

            <TextView
                android:id="@+id/tv_city"
                style="@style/Widget.MaterialComponents.TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="-1dp"
                android:text="Казань"
                android:textColor="@color/black"
                android:textSize="34sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/tv_description"
                app:layout_constraintEnd_toStartOf="@id/iv_weather"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintHorizontal_chainStyle="packed"
                />

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/tv_city"
                app:layout_constraintEnd_toStartOf="@id/tv_temperature"
                app:layout_constraintTop_toBottomOf="@id/tv_city"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:text="Очень пасмурно, "
                android:textColor="@color/gray_text"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/iv_weather"
                android:layout_marginRight="5dp"
                />

            <TextView
                android:id="@+id/tv_temperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/tv_description"
                app:layout_constraintTop_toTopOf="@id/tv_description"
                android:text="15 ℃"
                android:textColor="@color/purple_500"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@id/tv_city"
                />

            <ImageView
                android:id="@+id/iv_weather"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/test_image"
                app:layout_constraintStart_toEndOf="@id/tv_city"
                android:layout_marginStart="20dp"
                />

            <TextView
                android:id="@+id/tv_feels_like_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_weather"
                android:text="@string/feels_like"
                android:textColor="@color/gray_text"
                android:textSize="14sp"

                />
            <TextView
                android:id="@+id/tv_feels_like_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/tv_feels_like_title"
                app:layout_constraintTop_toBottomOf="@id/iv_weather"
                android:text="15℃"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tv_pressure_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_feels_like_title"
                android:text="@string/pressure"
                android:textColor="@color/gray_text"
                android:textSize="14sp"

                />
            <TextView
                android:id="@+id/tv_pressure_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/tv_pressure_title"
                app:layout_constraintTop_toBottomOf="@id/tv_feels_like_value"
                android:text="@string/pressure_value"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/tv_humidity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_pressure_title"
                android:text="@string/humidity"
                android:textColor="@color/gray_text"
                android:textSize="14sp"

                />
            <TextView
                android:id="@+id/tv_humidity_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/tv_humidity_title"
                app:layout_constraintTop_toBottomOf="@id/tv_pressure_value"
                android:text="@string/humidity_value"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/half_guideline"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintGuide_percent="0.5">
            </androidx.constraintlayout.widget.Guideline>

            <TextView
                android:id="@+id/tv_wind_speed_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/half_guideline"
                app:layout_constraintTop_toBottomOf="@id/iv_weather"
                android:text="@string/wind_speed"
                android:textColor="@color/gray_text"
                android:textSize="14sp"

                />
            <TextView
                android:id="@+id/tv_wind_speed_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/tv_wind_speed_title"
                app:layout_constraintTop_toBottomOf="@id/iv_weather"
                android:text="@string/wind_speed_value"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tv_wind_deg_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/half_guideline"
                app:layout_constraintTop_toBottomOf="@id/tv_wind_speed_title"
                android:text="@string/wind_deg"
                android:textColor="@color/gray_text"
                android:textSize="14sp"

                />
            <TextView
                android:id="@+id/tv_wind_deg_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/tv_wind_deg_title"
                app:layout_constraintTop_toBottomOf="@id/tv_wind_speed_title"
                android:text="333 ℃"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tv_wind_gust_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="@id/half_guideline"
                app:layout_constraintTop_toBottomOf="@id/tv_wind_deg_title"
                android:text="@string/wind_gust"
                android:textColor="@color/gray_text"
                android:textSize="14sp"

                />
            <TextView
                android:id="@+id/tv_wind_gust_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/tv_wind_gust_title"
                app:layout_constraintTop_toBottomOf="@id/tv_wind_deg_title"
                android:text="7.34 м/с"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tv_lon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_wind_gust_title"
                app:layout_constraintEnd_toStartOf="@id/tv_lat"

                android:text="49.1221"
                android:textColor="@color/gray_text"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/tv_lat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_wind_gust_title"
                app:layout_constraintStart_toEndOf="@id/tv_lon"

                android:text="55.7887"
                android:textColor="@color/gray_text"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>