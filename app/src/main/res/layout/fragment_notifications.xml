<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/input_label"
        android:id="@+id/tv_title_label"
        android:text="@string/title_input_label"
        app:layout_constraintBottom_toTopOf="@id/et_title_input"
        app:layout_constraintStart_toStartOf="@id/et_title_input"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        />

    <androidx.appcompat.widget.AppCompatEditText
        style="@style/edit_text"
        android:id="@+id/et_title_input"
        android:hint="@string/hint_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_label"
        />

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/input_label"
        android:id="@+id/tv_label_text"
        android:text="@string/label_input_text"
        app:layout_constraintBottom_toTopOf="@id/et_text_input"
        app:layout_constraintStart_toStartOf="@id/et_text_input"
        app:layout_constraintTop_toBottomOf="@id/et_title_input"
        />

    <androidx.appcompat.widget.AppCompatEditText
        style="@style/edit_text"
        android:id="@+id/et_text_input"
        android:hint="@string/hint_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_label_text" />

    <androidx.appcompat.widget.AppCompatButton
        style="@style/primary_btn"
        android:id="@+id/btn_create_notif"
        app:layout_constraintTop_toBottomOf="@id/et_text_input"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="50dp"
        android:text="@string/btn_text_create"
        android:layout_marginVertical="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>